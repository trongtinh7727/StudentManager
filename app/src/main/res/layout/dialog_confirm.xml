<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Bạn chắc chắn muốn xóa?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonBack"
                android:text="Chắn chắn"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/style_5dp_radius_grey"
                android:drawableStart="@drawable/ic_delete_white"
                android:paddingHorizontal="30dp"
                android:drawablePadding="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonConfirmDelete"
                android:text="Quay lại"
                android:textColor="@color/white"
                android:background="@drawable/style_5dp_radius_grey"
                android:drawableStart="@drawable/ic_backleft"
                android:paddingHorizontal="30dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginVertical="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>