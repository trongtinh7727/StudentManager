<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="student"
            type="com.app.studentmanagement.data.models.Student" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/background2"
        android:layout_height="match_parent"
        tools:context=".ui.activities.DetailStudentInformationActivity">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                app:titleTextColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar" />
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="0dp"
                                android:src="@drawable/avt" />

                            <ImageButton
                                android:id="@+id/buttonUploadAvt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="44dp"
                                android:layout_marginTop="70dp"
                                android:layout_marginEnd="-30dp"
                                android:background="@null"
                                android:src="@drawable/ic_upload_avt" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:orientation="horizontal">

                                <ImageButton
                                    android:id="@+id/buttonEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:src="@drawable/ic_pen" />

                                <ImageButton
                                    android:id="@+id/buttonDelete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:src="@drawable/ic_delete" />
                            </LinearLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/textViewID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="@{'#'+student.id}"
                            />
                        <EditText
                            android:id="@+id/textViewName"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:inputType="none"
                            android:enabled="false"
                            android:hint="Họ và tên"
                            android:background="@color/white"
                            android:text="@{student.fullName}"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:layout_marginVertical="3dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/layoutEmail"
                                android:background="@color/white"
                                app:endIconMode="custom">
                                <EditText
                                    android:text="@{student.email}"
                                    android:id="@+id/editTextEmail"
                                    android:enabled="false"
                                    style="@style/editTextStyle"
                                    android:inputType="textEmailAddress"
                                    android:background="@drawable/style_edit_selected" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khoa"
                                android:layout_marginVertical="3dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <AutoCompleteTextView
                                    android:id="@+id/autoCompleteTextViewOption"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_weight="1"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="none"
                                    android:padding="8dp"
                                    android:layout_margin="8dp"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lớp"
                                android:layout_marginVertical="3dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/layoutClass"
                                android:background="@color/white"
                                app:endIconMode="custom">
                                <EditText
                                    android:id="@+id/editTextClass"
                                    style="@style/editTextStyle"
                                    android:enabled="false"
                                    android:text="@{student.classRoom}"
                                    android:background="@drawable/style_edit_selected" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Danh sách chứng chỉ"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content">
                                <ImageButton
                                    android:id="@+id/buttonImportFile"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_upload"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>
                        <TableLayout
                            android:id="@+id/tableLayout"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:stretchColumns="3"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:background="@drawable/style_border_row_item"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/textViewTime"
                                    android:text="ID"
                                    android:textSize="15sp"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="0dp" />
                                <TextView
                                    android:text="Name"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="0dp" />
                            </TableRow>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycleViewListCerfiticate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </TableLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>