<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/background2"
        android:layout_height="match_parent"
        tools:context=".ui.activities.AddEditStudentActivity">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </androidx.appcompat.widget.Toolbar>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar" />

                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Họ và Tên"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/buttonDelete"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@color/white"
                                    android:layout_marginStart="235dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_delete" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="2dp"
                                    android:layout_marginVertical="5dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="25dp">

                                    <EditText
                                        android:id="@+id/editTextName"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:hint="Your ID"
                                        android:inputType="text"
                                        android:background="@drawable/style_edit_selected"
                                        android:padding="10dp" />
                                </androidx.cardview.widget.CardView>

                                <ImageButton
                                    android:id="@+id/buttonEditName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@null"
                                    android:src="@drawable/ic_pen" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mã số"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="2dp"
                                    android:layout_marginVertical="5dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="25dp">

                                    <EditText
                                        android:id="@+id/editTextID"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:hint="Your ID"
                                        android:inputType="text"
                                        android:background="@drawable/style_edit_selected"
                                        android:padding="10dp" />
                                </androidx.cardview.widget.CardView>

                                <ImageButton
                                    android:id="@+id/buttonEditID"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@null"
                                    android:src="@drawable/ic_pen" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="2dp"
                                    android:layout_marginVertical="5dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="25dp">

                                    <EditText
                                        android:id="@+id/editTextEmail"
                                        android:layout_width="match_parent"
                                        android:background="@drawable/style_edit_selected"
                                        android:layout_height="40dp"
                                        android:hint="Your Email"
                                        android:inputType="text"
                                        android:padding="10dp" />
                                </androidx.cardview.widget.CardView>

                                <ImageButton
                                    android:id="@+id/buttonEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@null"
                                    android:src="@drawable/ic_pen" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khoa"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="2dp"
                                    android:layout_weight="1"
                                    android:layout_marginVertical="5dp"
                                    app:cardCornerRadius="25dp">

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:id="@+id/editTextDepartment"
                                        android:layout_height="40dp"
                                        android:background="@drawable/style_edit_selected"
                                        android:drawablePadding="10dp"
                                        android:hint="Department"
                                        android:inputType="text"
                                        android:padding="10dp" />
                                </androidx.cardview.widget.CardView>

                                <ImageButton
                                    android:id="@+id/buttonDepartment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@null"
                                    android:src="@drawable/ic_pen" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lớp"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="2dp"
                                    android:layout_weight="1"
                                    android:layout_marginVertical="5dp"
                                    app:cardCornerRadius="25dp">
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:id="@+id/editTextClass"
                                        android:layout_height="40dp"
                                        android:background="@drawable/style_edit_selected"
                                        android:drawablePadding="10dp"
                                        android:hint="Class"
                                        android:padding="10dp" />
                                </androidx.cardview.widget.CardView>

                                <ImageButton
                                    android:id="@+id/buttonClass"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@null"
                                    android:src="@drawable/ic_pen" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Danh sách tài khoản "
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content">
                                <ImageButton
                                    android:id="@+id/buttonDownload"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_download"
                                    android:background="@color/white"
                                    android:layout_weight="1"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ImageButton
                                    android:id="@+id/buttonUploadFile"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_upload"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ImageButton
                                    android:id="@+id/buttonAdd"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:layout_marginHorizontal="5dp"
                                    android:src="@drawable/ic_add"
                                    android:background="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>
                        <TableLayout
                            android:id="@+id/tableLayout"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:stretchColumns="1,2,3"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:background="@drawable/style_border_row_item"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/textViewTime"
                                    android:text="ID"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content" />
                                <TextView
                                    android:text="Name"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content" />
                            </TableRow>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycleViewListHistoryLogin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </TableLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonSave"
                            android:text="Lưu"
                            android:background="@drawable/style_stoke_click"
                            android:textColor="#004AB9"
                            android:paddingHorizontal="80dp"
                            android:layout_marginVertical="20dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>
                    </LinearLayout>
            </ScrollView>

                </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>